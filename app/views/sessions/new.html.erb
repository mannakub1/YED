<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :Email %><br>
      <%= f.email_field :string, class: 'form-control' %>
     	 <br>
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %>
		<br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
    <br>
    <% if flash[:danger] %>
      <div class="notice"><%= flash[:danger] %></div>
    <% end %> 
    <p>New user? <%= link_to "Sign up now!", 'singup' %></p>
  </div>


</div>